@model List<Order>
@{
    var counter = 0;
}
<style>
    .header {
        background: #62ab00;
        padding: 10px 30px;
    }

    .table-title {
        color: #fff;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container my-5" style="min-height:35vh">
    <div class="header">
        <h1 class="table-title">Orders</h1>
    </div>
    <div class="shadow">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order Id</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Created date</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Id</td>
                        <td>@item.TotalPrice AZN</td>
                        <td>@item.CreatedDate?.ToString("MM/dd/yyyy HH:mm")</td>
                        <td> <span class="badge text-white text-bg-@(item.OrderStatus == OrderStatus.Pending ? "secondary" : item.OrderStatus == OrderStatus.Accepted ? "success" : "danger")" style="padding: 6px 12px;">@item.OrderStatus</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>